---
import { Icon } from "astro-icon/components";
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-green-50 via-white to-green-50" id="hero">
  <!-- Animated Background Elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="hero-circle absolute w-64 h-64 bg-[var(--color-primary)]/10 rounded-full blur-3xl top-20 -left-32"></div>
    <div class="hero-circle absolute w-96 h-96 bg-[var(--color-accent)]/10 rounded-full blur-3xl bottom-20 -right-32"></div>
  </div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Event Badge -->
      <div class="hero-badge inline-flex items-center gap-2 px-6 py-3 bg-white/80 backdrop-blur-sm rounded-full shadow-lg mb-8 border border-green-100">
        <Icon name="lucide:calendar-heart" class="w-5 h-5 text-[var(--color-primary)]" />
        <span class="text-sm font-medium text-gray-700">2025 年 12 月 計算機科學教育週</span>
      </div>

      <!-- Main Title -->
      <h1 class="hero-title text-5xl md:text-6xl lg:text-7xl font-bold text-gray-900 mb-6 leading-tight">
        SITCON<br />
        <span class="text-[var(--color-primary)]">Hour of Code</span>
      </h1>

      <!-- Subtitle -->
      <p class="hero-subtitle text-xl md:text-2xl text-gray-600 mb-12 leading-relaxed max-w-2xl mx-auto">
        人人都能寫程式<br />
        從 4 歲到 104 歲，一起動手體驗程式設計的樂趣
      </p>

      <!-- CTA Buttons -->
      <div class="hero-cta flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a
          href="#signup"
          class="group px-8 py-4 bg-[var(--color-primary)] text-white rounded-full font-bold text-lg hover:bg-[var(--color-primary-dark)] hover:shadow-xl hover:scale-105 transition-all duration-300 flex items-center gap-2"
        >
          <span>立即報名參加</span>
          <Icon name="lucide:arrow-right" class="w-5 h-5 group-hover:translate-x-1 transition-transform" />
        </a>

        <a
          href="#volunteer"
          class="px-8 py-4 bg-white text-[var(--color-primary)] rounded-full font-bold text-lg border-2 border-[var(--color-primary)] hover:bg-[var(--color-primary)] hover:text-white hover:shadow-xl hover:scale-105 transition-all duration-300"
        >
          志工報名
        </a>
      </div>

      <!-- Scroll Indicator -->
      <div class="hero-scroll absolute bottom-12 left-1/2 transform -translate-x-1/2 flex flex-col items-center gap-2 text-gray-400">
        <span class="text-sm font-medium">探索更多</span>
        <Icon name="lucide:chevron-down" class="w-6 h-6 animate-bounce" />
      </div>
    </div>
  </div>
</section>

<script>
  import gsap from 'gsap';

  // Animate hero elements on load
  document.addEventListener('DOMContentLoaded', () => {
    const tl = gsap.timeline({
      defaults: { ease: 'power3.out' }
    });

    tl.from('.hero-badge', {
      opacity: 0,
      y: -30,
      duration: 0.8
    })
    .from('.hero-title', {
      opacity: 0,
      y: 30,
      duration: 0.8
    }, '-=0.4')
    .from('.hero-subtitle', {
      opacity: 0,
      y: 30,
      duration: 0.8
    }, '-=0.4')
    .from('.hero-cta', {
      opacity: 0,
      y: 30,
      duration: 0.8
    }, '-=0.4')
    .from('.hero-scroll', {
      opacity: 0,
      duration: 0.8
    }, '-=0.4');

    // Animate background circles
    gsap.to('.hero-circle', {
      y: '+=30',
      x: '+=20',
      duration: 3,
      ease: 'sine.inOut',
      yoyo: true,
      repeat: -1,
      stagger: 0.5
    });
  });
</script>
