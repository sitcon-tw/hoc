---
interface Props {
  title?: string;
  description?: string;
  image?: string;
}

import SEO from "../components/SEO.astro";

const {
  title = 'SITCON Hour of Code 2025 | 人人都能寫程式',
  description = '學生計算機年會（SITCON）主辦的 Hour of Code 程式教育活動。無論年齡大小，從 4 歲到 104 歲，都可以報名參與，動手寫程式、理解資訊科技、用創意解決生活中的問題並培養邏輯思維。',
  image
} = Astro.props;

const canonicalURL = Astro.site
  ? new URL(Astro.url.pathname, Astro.site)
  : Astro.url;
---

<!doctype html>
<html lang="zh-TW">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/hoc/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- keep basic head essentials and fonts, delegate meta tags to SEO component -->
		<meta name="theme-color" content="#00d959" />
		<meta name="msapplication-TileColor" content="#00d959" />

		<!-- Fonts -->
		<link href="https://font.emtech.cc/css/LINESeedTW" rel="stylesheet" />

		<SEO
			title={title}
			description={description}
			image={image}
			pathname={Astro.url.pathname}
		/>
	</head>
	<body>
		<slot />
		<script>
			import '../scripts/animations.ts';
		</script>
	</body>
</html>
